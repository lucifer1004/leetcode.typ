        color: var(--text-secondary);
        margin-bottom: 40px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .cta-group {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .btn-primary {
        background: var(--accent);
        color: var(--bg-primary);
      }

      .btn-primary:hover {
        background: #00d4bc;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 184, 163, 0.3);
      }

      .btn-secondary {
        background: var(--bg-card);
        color: var(--text-primary);
        border: 1px solid var(--border);
      }

      .btn-secondary:hover {
        background: var(--bg-secondary);
        border-color: var(--accent);
      }

      /* Showcase Section */
